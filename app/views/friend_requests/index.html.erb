<h1>Friend Requests</h1>
<ul>
  <% @user.request_users.each do |user| %>
    <li><%= user.name %> <%= button_to 'Accept', friendships_path, params: { user_id: user.id } %> <%= button_to 'Reject', friend_request_path(@user.id), method: :delete, params: { friend_id: user.id } %></li>
  <% end %>
</ul>
<!DOCTYPE html>
<html>
  <head>
    <title>BookFace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p><%= current_user.name %> is logged in.</p>
      <p><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
      <p><%= link_to 'Profile', user_path(current_user) %></p>
      <p><%= link_to 'Timeline', user_posts_path(current_user) %></p>
      <p><%= link_to 'Users', users_path %></p>

      <p>You have <%= link_to pluralize(current_user.request_users.size, 'friend request'), friend_requests_path %></p>
    <% end %>
    
    <%= flash.notice %>
    <%= yield %>
  </body>
</html>
